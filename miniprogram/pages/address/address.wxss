@import "./address.skeleton.wxss";
.address{
  padding-bottom: 110rpx;
  background-color: #f2f2f2;
}
.address-content-box{
  margin: 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  position: relative;
}
.name-tel-default-box{
  padding: 12rpx 24rpx;
  height: 60rpx;
  overflow: hidden;
  line-height: 60rpx;
}
.name{
  color: #333;
}
.tel{
  color: #777;
  font-size: 28rpx;
  margin-left: 10rpx;
}
.default{
  width: 60rpx;
  height: 32rpx;
  color: #fff;
  font-size: 20rpx;
  background-color: #ff0033;
  text-align: center;
  line-height: 32rpx;
  border-radius: 16rpx;
  margin-left: 12rpx;
  margin-top: 12rpx;
}
.address-content{
  padding: 0 24rpx 24rpx 24rpx;
  color: #777;
  font-size: 24rpx;
}
.address-edit{
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  top: 50%;
  right: 32rpx;
  margin-top: -16rpx;
}
.auto-img{
  height: 32rpx;
}
.add-btn-box{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 110rpx;
  background-color: #f2f2f2;
}
.add-btn{
  width: 90%;
  height: 76rpx;
  margin: 6rpx auto;
  color: #fff;
  font-size: 28rpx;
  background-color: #ff0033;
  text-align: center;
  line-height: 76rpx;
  border-radius: 38rpx;
  letter-spacing: 2rpx;
}