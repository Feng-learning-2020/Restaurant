@import "./order.skeleton.wxss";
.pay-information-box{
  margin: 24rpx 24rpx 0 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  border-bottom: 1rpx dashed #ddd;
  padding-bottom: 16rpx;
  overflow: hidden;
}
.information-title{
  height: 72rpx;
  padding-left: 16rpx;
  line-height: 72rpx;
  color: #333;
  font-size: 26rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 12rpx;
  overflow: hidden;
}
.information-btn{
  color: #ff0033;
  font-weight: bold;
  margin-right: 16rpx;
}
.address-information{
  color: #999;
  font-size: 26rpx;
  padding-left: 16rpx;
  margin-bottom: 32rpx;
}
.tel{
  margin-left: 16rpx;
}

.pay-information{
  height: 140rpx;
  margin: 16rpx 34rpx;
  overflow: hidden;
}
.information-img-box{
  width: 140rpx;
  height: 140rpx;
  background-color: #eee;
}
.information-img{
  width: 100%;
  height: 140rpx;
  display: block;
}
.information-content{
  padding-left: 20rpx;
  width: calc(100% - 160rpx);
  height: 140rpx;
}
.information-name{
  color: #333;
}
.information-rule{
  color: #777;
  font-size: 26rpx;
  margin-top: 8rpx;
}
.information-pri-num{
  overflow: hidden;
  padding-right: 20rpx;
  height: 42rpx;
  line-height: 42rpx;
  margin-top: 14rpx;
}
.information-pri{
  color: #ff0033;
  font-style: 28rpx;
}
.information-num{
  color: #777;
  font-size: 24rpx;
}

.count-total-box{
  margin: 0 24rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 16rpx 28rpx;
  position: relative;
  /* padding-top: 16rpx; */
}
.count-total-box::before{
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-color: #f2f2f2;
  border-radius: 50%;
  position: absolute;
  left: -20rpx;
  top: -20rpx;
}
.count-total-box::after{
  content: '';
  width: 40rpx;
  height: 40rpx;
  background-color: #f2f2f2;
  border-radius: 50%;
  position: absolute;
  right: -20rpx;
  top: -20rpx;
}
.time{
  color: #999;
  font-size: 24rpx;
}
.count-total{
  height: 56rpx;
  line-height: 56rpx
}
.count-box{
  color: #333;
  font-size: 26rpx;
}
.total-box{
  color: #ff0033;
  font-size: 26rpx;
  font-weight: bold;
}
.nothing{
  width: 100%;
  height: 60rpx;
  color: #999;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
}