.my{
  background-color: #f2f2f2;
}
.my-information{
  padding-top: 10rpx;
  overflow: hidden;
}
.my-img-nickname{
  height: 320rpx;
  background-color: #ff0033;
  padding-top: 80rpx;
  /* position: relative; */
}
.my-img{
  width: 160rpx;
  height: 160rpx;
  background-color: #eee;
  margin: 0 auto;
  border-radius: 50%;
  overflow: hidden;
  box-shadow: 0 0 0 8rpx rgba(255, 255, 255, .3);
}
.myimg{
  height: 160rpx;
}
.my-nickname{
  width: 100%;
  color: #fff;
  margin-top: 16rpx;
  text-align: center;
}
.my-option{
  margin-top: 12rpx;
}
.option-address{
  color: #333;
  height: 80rpx;
  background-color: #fff;
  font-size: 28rpx;
  line-height: 80rpx;
  padding: 0 24rpx;
  overflow: hidden;
}
.option-icon{
  width: 32rpx;
  height: 32rpx;
  margin-top: 24rpx;

}
.icon-img{
  height: 32rpx;
}
button:not([size='mini']){
  width: 240rpx;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  padding: 0;
  margin: 24rpx auto;
  font-weight: normal;
  text-align: center;
}